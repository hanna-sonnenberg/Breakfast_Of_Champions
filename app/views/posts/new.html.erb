 <h1>Create a new post</h1>
        <%= simple_form_for @post do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <embed src="" id="photo-preview" type="">
        <%= f.input :photos, as: :file, input_html: {class: 'd-none hidden', multiple: true, accept: ".pdf", id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: '✉︎ Upload a PDF file' %>

        <%= f.input :category_ids, collection: Category.all, as: :check_boxes, label_method: :name, input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item' %>
        <%= f.button :submit, class: 'btn btn-success' %>

        <% end %>

