<div class="container pt-5">
  <div class="row justify-content-center">
    <div id="column" class="col-12">
      <div class="col-md-12 form-container">
       <h1>Create a new post...</h1>
       <h5>How it works:</h5>
       <ul style="list-style: none">
       <li><p><i class="fas fa-upload"></i> - Upload your work in progress.</p></li>
       <li><p><i class="fas fa-question"></i> - Ask your questions to the community.</p></li>
       <li><p><i class="fas fa-comments"></i> - Get feedback.</p></li>
       <li><p><i class="fas fa-signal"></i> - Take your work to the next level!</p></li>
       </ul>
        <%= simple_form_for @post do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :photos, as: :file, input_html: {class: 'd-none hidden', multiple: true, accept: ".pdf", id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: '✉︎ Upload a PDF file (1 page only)' %>
        <embed src="" id="photo-preview" type="" class="hidden-embed-pdf">
        <%= f.input :category_ids, collection: Category.all, as: :check_boxes, label_method: :name, input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item' %>
        <%= f.button :submit, class: 'btn btn-info' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

