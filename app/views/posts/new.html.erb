 <h1>Create a new post</h1>
        <%= simple_form_for @post do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, input_html: {accept: ".pdf", value: "Choose PDF"} %>
        <%= f.input :post_categories, collection: PostCategory.all, as: :check_boxes, label_method: lambda { |post_category| post_category.category.name } %>
        <%= f.button :submit, class: 'btn btn-success' %>
        <% end %>
