<h2><%= @post.title %></h2>
<h3><%= @post.description %></h3>

<% @post.photos.each do |photo| %>
  <%= cl_image_tag "#{photo.key}.jpg", height: 300, width: 400, crop: :fill %>
<% end %>


<li><% @post.categories.each do |category| %></li>
<%= category.name %>
<% end %>






 <h1>Add your feedback</h1>
        <%= simple_form_for([@post, @feedback], remote: true) do |f| %>
        <%= f.input :description %>
        <%= f.button :submit, class: 'btn btn-success' %>
        <% end %>






<% @post.feedbacks.each do |feedback| %>
  <%= render partial: "posts/post", locals: { feedback: feedback } %>
<% end %>




