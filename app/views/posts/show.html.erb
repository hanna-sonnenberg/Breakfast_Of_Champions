

  <div class="row px-5">
  <div class="col-9 py-5">
    <div class="post d-flex justify-content-center">
    <% @post.photos.each do |photo| %>
      <%= cl_image_tag "#{photo.key}.jpg", class: "shadow-lg"%>
    <% end %>
    </div>
      <button class="btn btn-success"> <%= link_to "Edit a post", edit_post_path %></button>
              <%= link_to post_path(@post), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt" id="cards"></i>
              <% end %>
  </div>

  <div class="col-3 ">
    <div class="post-description">
      <h4><%= @post.title %></h4>
        <h5><%= @post.description %></h5>
          <li><% @post.categories.each do |category| %></li>
          <%= category.name %>
          <% end %>
          <div class="post-feedback">
            <h6>Add your feedback</h6>
                      <%= simple_form_for([@post, @feedback], remote: true) do |f| %>
                      <%= f.input :description, :as => :hiddenf %>
                      <%= f.button :submit, class: 'btn btn-success' %>
                      <% end %>
              <% @post.feedbacks.where(feedback_id: nil).each do |feedback| %>
              <%= render partial: "posts/post", locals: { feedback: feedback, level: 0 } %>
            <% end %>
          </div>
    </div>
  </div>
  </div>


