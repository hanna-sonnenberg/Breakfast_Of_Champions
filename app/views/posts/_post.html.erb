  <div class="feedback-container" style="padding-left: <%= level * 10 %>px">
    <%= level %>
    <div class="d-flex">
    <h4>
    <%= feedback.description %>
    </h4>
    <button class="btn btn-primary ml-2" type="button" data-toggle="collapse" data-target="#collapse<%=feedback.id%>" aria-expanded="false" aria-controls="collapseExample">
      <i class="fas fa-edit"></i>
    </button>
    </div>
    <div class="collapse" id="collapse<%=feedback.id%>">
      <div class="card card-body">
        <h3>Edit your feedback</h3>
          <%= simple_form_for([@post, feedback], remote: true) do |f| %>
            <%= f.input :description, label: false %>
            <%= f.button :submit, class: 'btn btn-success' %>
          <% end %>
        </div>
    </div>

  <%= render partial: "posts/form", locals: { feedback_id: feedback.id } %>

  <% feedback.feedbacks.each do |feedback| %>
    <%= render partial: "posts/post", locals: { feedback: feedback, level: (level += 1) } %>
  <% end %>
</div>
