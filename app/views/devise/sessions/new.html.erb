<div class="login-container" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://source.unsplash.com/1600x900/?art);">
  <div class="login-cards">
    <div class="login-logo">
      <%= image_tag("logo_17.png", alt:"BoC logo") %>
    </div>

    <div class="login-form">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <button class="btn btn-info"><%= f.button :submit, "Log in" %></button>
      </div>
      <% end %>
      <br>
      <br>
      <br>

      <div class="login-shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

